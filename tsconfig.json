{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "src",
     "moduleResolution": "node",
     "sourceMap": true,
    "outDir": "build",
     "removeComments": false,
     "noEmitOnError": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "src/*"
  ]

}
